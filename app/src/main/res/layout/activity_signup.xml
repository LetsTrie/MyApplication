<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:backgroundTint="#000000"
            android:id="@+id/firstNameID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="15dp"
            android:autofillHints=""
            android:hint="First Name"
            android:inputType="text"
            android:textCursorDrawable="@color/Black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:backgroundTint="#000000"
            android:id="@+id/lastNameID"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:autofillHints=""
            android:hint="Last Name"
            android:inputType="text"
            android:textCursorDrawable="@color/Black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:autofillHints=""
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="@color/Black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/passwordID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:autofillHints=""
            android:hint="Password"
            android:inputType="textPassword"
            android:textCursorDrawable="@color/Black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/confirmPasswordId"
            android:layout_width="match_parent"
            android:backgroundTint="#000000"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:autofillHints=""
            android:hint="Confirm Password"
            android:layout_marginTop="15dp"
            android:inputType="textPassword"
            android:textCursorDrawable="@color/Black"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:targetApi="o" />

        <Button
            android:id="@+id/uploadProPicbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"

            android:gravity="left"
            android:text="Upload a Profile Picture"

            android:textSize="15sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/SignUPbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"

            android:background="@color/buttoncolor1"
            android:gravity="center"
            android:text="@string/sign_up"
            android:textColor="#ffffff"

            android:textSize="20sp"
            android:textStyle="bold"
            />

        <ProgressBar
            android:padding="10dp"
            android:id="@+id/progressBarSignupId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />

    </LinearLayout>

</ScrollView>